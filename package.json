{
  "name": "bank-statement-analyzer-api",
  "version": "1.0.0",
  "type": "module",
  "description": "Bank Statement Analyzer API",
  "main": "src/server.js",
  "scripts": {
    "start": "node src/server.js",
    "dev": "nodemon src/server.js",
    "workers": "node src/startWorkers.js",
    "dev:all": "concurrently \"npm run dev\" \"npm run workers\"",
    "redis-streams": "node start-redis-streams.js",
    "redis-streams:dev": "nodemon start-redis-streams.js",
    "redis-streams:workers-only": "ENABLE_WORKERS=true node start-redis-streams.js",
    "redis-streams:cluster": "ENABLE_CLUSTERING=true node start-redis-streams.js",
    "redis-streams:production": "NODE_ENV=production ENABLE_CLUSTERING=true ENABLE_WORKERS=true node start-redis-streams.js",
    "workers:statement": "node src/workers/statementProcessingWorker.js",
    "workers:categorization": "node src/workers/transactionCategorizationWorker.js",
    "workers:risk": "node src/workers/riskAnalysisWorker.js",
    "workers:manager": "node src/workers/workerManager.js",
    "test": "vitest",
    "test:ui": "vitest --ui",
    "test:coverage": "vitest --coverage",
    "test:unit": "vitest run --config vitest.unit.config.js test/unit/ tests/unit/",
    "test:unit:watch": "vitest --config vitest.unit.config.js test/unit/ tests/unit/",
    "test:integration": "vitest run tests/integration/ src/",
    "test:integration:watch": "vitest tests/integration/ src/",
    "test:all": "npm run test:unit && npm run test:integration",
    "test:health": "curl http://localhost:3001/health",
    "setup": "node createLogDir.js",
    "sos:worker": "node workers/sosVerificationWorker.js",
    "sos:worker:new": "node workers/sosVerificationWorkerNew.js",
    "sos:test": "node test-sos-verification.js",
    "sos:test:new": "node test-new-sos-verification.js",
    "sos:test:worker": "node test-new-sos-verification.js --worker-mode",
    "sos:add-job": "node workers/sosVerificationWorkerNew.js --add-test-job",
    "sos:test-api": "node test-sos-verification.js --test-api",
    "prod:setup": "node scripts/setup-production.js",
    "prod:verify": "node scripts/verify-production-config.js",
    "prod:start": "cross-env NODE_ENV=production node src/app.js",
    "test:production": "cross-env NODE_ENV=production npm run prod:verify && npm run test:all"
  },
  "dependencies": {
    "axios": "^1.10.0",
    "bcrypt": "^5.1.1",
    "bcryptjs": "^2.4.3",
    "bull": "^4.16.5",
    "compression": "^1.8.1",
    "cookie-parser": "^1.4.7",
    "cors": "^2.8.5",
    "csv-parse": "^6.0.0",
    "dotenv": "^16.0.3",
    "exceljs": "^4.4.0",
    "express": "^4.18.2",
    "express-basic-auth": "^1.2.1",
    "express-mongo-sanitize": "^2.2.0",
    "express-rate-limit": "^7.5.1",
    "express-validator": "^7.2.1",
    "helmet": "^7.2.0",
    "ioredis": "^5.8.0",
    "joi": "^17.13.3",
    "jsonwebtoken": "^9.0.2",
    "mongoose": "^7.0.0",
    "morgan": "^1.10.1",
    "multer": "^1.4.5-lts.1",
    "package": "^1.0.1",
    "pdf-parse": "^1.1.1",
    "pdfjs-dist": "^4.10.38",
    "pdfkit": "^0.13.0",
    "playwright": "^1.54.1",
    "playwright-extra": "^4.3.6",
    "playwright-extra-plugin-stealth": "npm:puppeteer-extra-plugin-stealth@^2.11.2",
    "playwright-stealth": "^0.0.1",
    "prom-client": "^15.1.3",
    "puppeteer-extra-plugin-stealth": "^2.11.2",
    "rate-limit-redis": "^2.1.0",
    "rate-limiter-flexible": "^7.1.1",
    "redis": "^4.7.1",
    "response-time": "^2.3.3",
    "sanitize-html": "^2.17.0",
    "swagger-jsdoc": "^6.2.8",
    "swagger-ui-express": "^5.0.1",
    "uuid": "^9.0.1",
    "winston": "^3.17.0",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@shelf/jest-mongodb": "^5.2.2",
    "@types/jest": "^30.0.0",
    "@types/joi": "^17.2.2",
    "@vitest/coverage-v8": "^1.6.1",
    "@vitest/ui": "^1.6.1",
    "c8": "^8.0.1",
    "concurrently": "^7.0.0",
    "cross-env": "^7.0.3",
    "csv-parser": "^3.2.0",
    "form-data": "^4.0.3",
    "glob": "^10.3.10",
    "happy-dom": "^12.10.3",
    "mongodb-memory-server": "^10.2.0",
    "mongoose-paginate-v2": "^1.9.1",
    "node-fetch": "^2.7.0",
    "nodemon": "^2.0.20",
    "open": "^10.2.0",
    "redis-mock": "^0.56.3",
    "supertest": "^6.3.4",
    "vitest": "^1.6.1"
  }
}
